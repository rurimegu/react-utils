{
  "compilerOptions": {
    "target": "es5",
    "composite": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "jsx": "react-jsx",

    // Output directory
    "rootDir": "src",
    "declarationDir": "dist",
    "outDir": "dist",
  },
  "include": [
    "src"
  ]
}
